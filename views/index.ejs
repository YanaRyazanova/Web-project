<h1>Всем привет от самых лучших программистов Яночки, Гришечки и Тёмочки!</h1>
{{#if items.length}}
    <ul>
        {{#each items}}
            <li>
                <h3>{{name}}</h3>
                <h3> {{field1}}</h3>
                <h3> {{field2}}</h3>
                <label>
                    <select>
                        <option>Сделал</option>
                        <option>В процессе</option>
                        <option>Не сделал</option>
                    </select>
                </label>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p>No items</p>
{{/if}}
<form action="/api/create" method="POST">
    <h1>Добавить в базу</h1>
    <div>
        <input type="text" name="name">
        <label>Кто</label>
    </div>
    <button type="submit">Добавить</button>
</form>
<form action="/auth/registration" method="POST">
    <h1>Зарегистировать пользователя</h1>
    <div>

        <label>Введите имя
            <input type="text" name="username">
        </label>
        <label>Введите пароль
            <input type="password" name="password">
        </label>
    </div>
    <button type="submit">Добавить</button>
</form>
<form action="/auth/login" method="POST">
    <h1>Войти</h1>
    <div>

        <label>Введите имя
            <input type="text" name="username">
        </label>
        <label>Введите пароль
            <input type="password" name="password">
        </label>
    </div>
    <button type="submit">Войти</button>
</form>
